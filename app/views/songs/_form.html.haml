- form_for @song do |f|
  = f.error_messages
  %p
    = f.label :title
    %br
    = f.text_field :title, :size => 90
  %p
    = f.label :artist
    %br
    = f.text_field :artist, :size => 90
  %p
    = f.label :album
    %br
    = f.text_field :album, :size => 90
  %p
    = f.label :tracknum
    %br
    = f.text_field :tracknum, :size => 90
  %p
    = f.label :date
    %br
    = f.text_field :date, :size => 90
  %p
    = f.label :filename
    %br
    = f.text_field :filename, :size => 90
  %p
    = f.label :raw
    %br
    = f.text_area :raw, :rows => 10, :cols => 90
  %p
    = f.submit
